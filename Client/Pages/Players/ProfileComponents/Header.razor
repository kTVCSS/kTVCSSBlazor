@using kTVCSSBlazor.Components.Icons
@using kTVCSSBlazor.Db.Models.Players

<RadzenStack>
    <RadzenStack JustifyContent=JustifyContent.SpaceBetween AlignItems=AlignItems.Center Orientation="Orientation.Horizontal">
        <RadzenText Text=@(string.Concat("#", player.MainInfo.Position)) />
        @if (player.IsAdmin)
        {
            <RadzenText TextAlign=TextAlign.End Text="Администратор" />
        }
        else if (player.Vip)
        {
            <RadzenText TextAlign=TextAlign.End Text="VIP" />
        }
        else
        {
            <RadzenText TextAlign=TextAlign.End Text="" />
        }
    </RadzenStack>

    <div style="margin: auto;width: 128px;height: 128px;">
        <div>
            @if (isOnline)
            {
                <img style="box-shadow: 0 0 3px 1px #00FF00; background-repeat: no-repeat; background-position: 50%;border-radius: 200px;" src="@player.MainInfo.PhotoUrl" width="128" height="128" />
            }
            else
            {
                <img style="box-shadow: 0 0 3px 1px #000; background-repeat: no-repeat; background-position: 50%;border-radius: 200px;" src="@player.MainInfo.PhotoUrl" width="128" height="128" />
            }
        </div>
    </div>

    <RadzenStack JustifyContent=JustifyContent.Center AlignItems=AlignItems.Center Orientation="Orientation.Horizontal">
        @if (!string.IsNullOrEmpty(player.TeamInfo.Name))
        {
            <RadzenLink Style="text-shadow: 2px 2px 4px rgba(0, 0, 0);" class="rz-text-display-h4" Path="@string.Concat("/team/", player.TeamInfo.ID)">@player.TeamInfo.Name</RadzenLink>
            <RadzenText Style="text-shadow: 2px 2px 4px rgba(0, 0, 0);" TextStyle=TextStyle.DisplayH4 Text=@(string.Concat(player.MainInfo.Name.Replace(player.TeamInfo.Name, null))) />
        }
        else
        {
            <RadzenText Style="text-shadow: 2px 2px 4px rgba(0, 0, 0);" TextStyle=TextStyle.DisplayH4 Text=@(string.Concat(player.MainInfo.Name)) />
        }
    </RadzenStack>

    <RadzenStack JustifyContent="JustifyContent.Center" Orientation="Orientation.Horizontal">
        @if (!string.IsNullOrEmpty(player.Social.VkId))
        {
            <RadzenLink Path="@player.Social.VkId" target="_blank">
                <img src="data:image/png;base64," alt="vk-circled">
            </RadzenLink>
        }
        @if (!string.IsNullOrEmpty(player.Social.TwitchUrl))
        {
            <RadzenLink Path="@player.Social.TwitchUrl" target="_blank">
                <img src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACAAAAAgCAYAAABzenr0AAAACXBIWXMAAAsTAAALEwEAmpwYAAAAi0lEQVR4nO2SyRGAIAwA04QNWKEdSEeWYg224Wcdf15xCCowTvYPuwmIOE6tAAMvY5E3wFwyoEs6qN9nDhhLB+zwAIlcq7Yx8yY54AHiT1DjJ7RQNAAIxQLYyIE+awCp8qsALegg0bDJYwM+k69EXBwjD5IKz0mb/A5l6gloJQecA/LJLwLyyp1fswBPPMP1pHZJ9gAAAABJRU5ErkJggg==" alt="twitch">
            </RadzenLink>
        }
        @if (!string.IsNullOrEmpty(player.Social.YoutubeUrl))
        {
            <RadzenLink Path="@player.Social.YoutubeUrl" target="_blank">
                <img src="data:image/png;base64," alt="youtube-play--v1">
            </RadzenLink>
        }
    </RadzenStack>
</RadzenStack>

@code {
    [Parameter] public PlayerInfo player { get; set; }
    [Parameter] public bool isOnline { get; set; }
}
